<div class="row">
    <h2>{{title}}</h2>
    <form ng-submit="submit()" ng-controller="UpdateFlightController">
        <div class="row">
            <div class="col-sm-3">
                <span>Flight Number</span>
                {{flightno}}
            </div>
            <div class="col-sm-4">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <span>Arrival</span>
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" ng-model="selectedArrivalHour" required>
                            <option value="">Please select hour</option>
                            <option ng-repeat="x in hours" value="{{x}}">{{x}}</option>
                        </select>:
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" ng-model="selectedArrivalMin" required>
                            <option value="">Please select min</option>
                            <option ng-repeat="x in mins" value="{{x}}">{{x}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <span>Departure</span>
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" ng-model="selectedDepartureHour" required>
                            <option value="">Please select hour</option>
                            <option ng-repeat="x in hours" value="{{x}}">{{x}}</option>
                        </select>:
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" ng-model="selectedDepartureMin" required>
                            <option value="">Please select min</option>
                            <option ng-repeat="x in mins" value="{{x}}">{{x}}</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <input type="submit" id='updateFlight' class="btn btn-primary" value="submit" />
            </div>
        </div>
    </form>
</div>

